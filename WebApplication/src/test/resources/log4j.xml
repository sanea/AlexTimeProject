<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <!-- Appenders -->
    <appender name="consoleAppender" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %c: %m%n"/>
        </layout>
    </appender>

    <!-- Application Loggers -->
    <logger name="ru.alex.webapp">
        <level value="info"/>
    </logger>

    <!-- spring Loggers -->
    <logger name="org.springframework.core">
        <level value="info"/>
    </logger>

    <logger name="org.springframework.beans">
        <level value="info"/>
    </logger>

    <logger name="org.springframework.context">
        <level value="info"/>
    </logger>

    <logger name="org.springframework.web">
        <level value="info"/>
    </logger>

    <logger name="org.springframework.security">
        <level value="info"/>
    </logger>

    <!-- hibernate Loggers -->
    <logger name="log4j.logger.org.hibernate">
        <level value="info"/>
    </logger>

    <logger name="log4j.logger.org.hibernate.SQL">
        <level value="info"/>
    </logger>

    <logger name="log4j.logger.org.type">
        <level value="info"/>
    </logger>

    <logger name="log4j.logger.org.hibernate.hql.ast.AST">
        <level value="info"/>
    </logger>

    <logger name="log4j.logger.org.hibernate.tool.hbm2ddl">
        <level value="info"/>
    </logger>

    <logger name="log4j.logger.org.hibernate.hql">
        <level value="info"/>
    </logger>

    <logger name="log4j.logger.org.hibernate.cache">
        <level value="info"/>
    </logger>

    <logger name="log4j.logger.org.hibernate.jdbc">
        <level value="info"/>
    </logger>

    <!-- Root Logger -->
    <root>
        <priority value="info"/>
        <appender-ref ref="consoleAppender"/>
    </root>

</log4j:configuration>
