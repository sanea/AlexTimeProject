<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/webapp</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <!--<property name="javax.persistence.validation.mode">none</property>-->
        <property name="show_sql">true</property>
        <mapping class="ru.alex.webapp.model.TaskEntity"/>
        <mapping class="ru.alex.webapp.model.UserTaskEntity"/>
        <mapping class="ru.alex.webapp.model.UserTaskStatusEntity"/>
        <mapping class="ru.alex.webapp.model.GroupAuthoritiesEntity"/>
        <mapping class="ru.alex.webapp.model.GroupMembersEntity"/>
        <mapping class="ru.alex.webapp.model.GroupsEntity"/>
        <mapping class="ru.alex.webapp.model.UsersEntity"/>
        <mapping class="ru.alex.webapp.model.UserActionEntity"/>
        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>