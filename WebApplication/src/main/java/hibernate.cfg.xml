<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- not used, see service-context.xml -->
        <property name="connection.url">jdbc:mysql://localhost:3306/webapp</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="connection.username">root</property>
        <property name="connection.password">root</property>
        <!--<property name="javax.persistence.validation.mode">none</property>-->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="use_sql_comments">true</property>
        <mapping class="ru.alex.webapp.model.Task"/>
        <mapping class="ru.alex.webapp.model.UserSiteTask"/>
        <mapping class="ru.alex.webapp.model.TaskTime"/>
        <mapping class="ru.alex.webapp.model.TaskTimeSeq"/>
        <mapping class="ru.alex.webapp.model.GroupAuthority"/>
        <mapping class="ru.alex.webapp.model.GroupMember"/>
        <mapping class="ru.alex.webapp.model.Group"/>
        <mapping class="ru.alex.webapp.model.User"/>
        <mapping class="ru.alex.webapp.model.UserAction"/>
        <mapping class="ru.alex.webapp.model.Site"/>
        <mapping class="ru.alex.webapp.model.SiteTask"/>
        <mapping class="ru.alex.webapp.model.UserChange"/>
        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>